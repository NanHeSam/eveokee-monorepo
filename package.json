{
  "name": "diary-vibes-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --names \"convex,web,mobile\" --prefix-colors \"cyan,magenta,yellow\" \"pnpm run dev:convex\" \"pnpm run dev:web\" \"pnpm run dev:mobile\"",
    "dev:convex": "cd packages/backend && npx convex dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:mobile:interactive": "cd apps/mobile && npx expo start --dev-client",
    "dev:backend": "cd packages/backend && npx convex dev",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:mobile": "turbo run build --filter=mobile",
    "build:ios": "cd apps/mobile && eas build --platform ios",
    "build:ios:dev": "cd apps/mobile && eas build --platform ios --profile development",
    "build:android": "cd apps/mobile && eas build --platform android",
    "run:ios": "cd apps/mobile && npx expo run:ios",
    "run:android": "cd apps/mobile && npx expo run:android",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:backend": "pnpm --filter @diary-vibes/backend test",
    "test:web": "pnpm --filter web test",
    "test:mobile": "pnpm --filter mobile test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "concurrently": "^8.2.2",
    "convex": "^1.27.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0"
}
